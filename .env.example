# OMNI Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# Application Settings
# =============================================================================
OMNI_ENV=development
OMNI_DEBUG=true
OMNI_VERSION=0.1.0

# =============================================================================
# Ollama Configuration
# =============================================================================
# Host machine Ollama endpoint
OLLAMA_BASE_URL=http://host.docker.internal:11434
# Or if running outside Docker:
# OLLAMA_BASE_URL=http://localhost:11434

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL with pgvector
DATABASE_URL=postgresql+asyncpg://omni_user:omni_password@localhost:5432/omni_db

# Individual components (used by docker-compose)
POSTGRES_USER=omni_user
POSTGRES_PASSWORD=omni_password
POSTGRES_DB=omni_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# =============================================================================
# Security Settings
# =============================================================================
# JWT secret for API authentication
JWT_SECRET_KEY=change-this-to-a-secure-random-string-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API key for service-to-service communication (optional)
API_KEY=

# =============================================================================
# GitHub Configuration (Optional)
# =============================================================================
# Personal Access Token for GitHub operations
GITHUB_TOKEN=

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# Session Configuration
# =============================================================================
SESSION_TIMEOUT_MINUTES=60
MAX_CONCURRENT_SESSIONS=10

# =============================================================================
# Memory Configuration
# =============================================================================
# Embedding model for long-term memory
MEMORY_EMBEDDING_MODEL=nomic-embed-text
MEMORY_VECTOR_DIMENSION=768
MEMORY_SIMILARITY_THRESHOLD=0.7
MEMORY_TOP_K=5

# Checkpoint retention (short-term memory)
CHECKPOINT_RETENTION_COUNT=100

# =============================================================================
# Orchestrator Configuration
# =============================================================================
MAX_STEPS=20
TIMEOUT_SECONDS=300
MAX_RETRIES=3

# =============================================================================
# Dashboard Configuration
# =============================================================================
GRADIO_SERVER_NAME=0.0.0.0
GRADIO_SERVER_PORT=7860
GRADIO_SHARE=false

# =============================================================================
# API Configuration
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:7860,http://localhost:3000
